	"build": {
		"dockerfile": "Dockerfile"
	},
	"postCreateCommand": "uv sync && R -q -e \"renv::restore()\"",
	"customizations": {
		"vscode": {
			"extensions": [
				"quarto.quarto",
				"REditorSupport.r",
				"ms-python.python",
				"charliermarsh.ruff",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter",
				"Posit.air-vscode",
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode"
			]
		}
	}
}
