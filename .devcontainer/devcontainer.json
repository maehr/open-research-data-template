{
	"name": "Release - Universal - Quarto Codespaces",
	// "build": {
	// 	"dockerfile": "Dockerfile",
	// 	"context": ".",
	// 	"args": {
	// 		"IMAGE": "mcr.microsoft.com/devcontainers/universal:latest"
	// 	}
	// },
	"image": "mcr.microsoft.com/devcontainers/universal:latest",
	"remoteUser": "codespace",
	"features": {
		"ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
			"version": "release",
			"installTinyTex": "true"
		},
		"ghcr.io/va-h/devcontainers-features/uv:1": {
			"version": "latest"
		},
		"ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
			"packages": "renv,languageserver"
		}
	},
	"postCreateCommand": "uv sync && uv pip install jupyter papermill && R -e \"renv::install()\"",
	"customizations": {
		"vscode": {
			"extensions": [
				"quarto.quarto",
				"REditorSupport.r",
				// "ms-python.python",
				"astral-sh.ty",
				"charliermarsh.ruff",
				"ms-toolsai.jupyter",
				"Posit.air-vscode"
			],
			"settings": {
				"r.rterm.option": ["--no-save", "--no-restore-data", "--quiet"],
				"r.useRenvLibPath": true,
				"[r]": {
					"editor.defaultFormatter": "Posit.air-vscode",
					"editor.formatOnSave": true
				}
			},
			"openFiles": ["README.md", "README.template.md"]
		}
	}
}
