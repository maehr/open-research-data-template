{
	"name": "Release - Universal - Quarto Codespaces",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".",
		"args": {
			"IMAGE": "mcr.microsoft.com/devcontainers/universal:latest"
		}
	},
	"remoteUser": "codespace",
	"features": {
		"ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
			"version": "release",
			"installTinyTex": "true"
		},
		"ghcr.io/astral-sh/devcontainer-features/uv:1": {
			"version": "latest"
		},
		"ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
			"packages": "rmarkdown,languageserver,prompt,lintr,nx10/httpgd@v2.0.3"
		}
	},
	"postCreateCommand": "uv pip install jupyter papermill",
	"customizations": {
		"vscode": {
			"extensions": [
				"quarto.quarto",
				"mcanouil.quarto-wizard",
				"REditorSupport.r",
				"ms-python.python",
				"ms-python.black-formatter",
				"ms-python.flake8",
				"ms-python.vscode-pylance",
				"ms-python.pylint",
				"ms-python.isort",
				"ms-toolsai.jupyter",
				"Posit.air-vscode"
			],
			"settings": {
				"r.rterm.option": ["--no-save", "--no-restore-data", "--quiet"],
				"r.useRenvLibPath": true,
				"[r]": {
					"editor.defaultFormatter": "Posit.air-vscode",
					"editor.formatOnSave": true
				}
			}
		}
	}
}
