{
	"name": "Open Research Data Template Container",
	"image": "ghcr.io/mcanouil/quarto-codespaces:latest",
	"remoteUser": "vscode",
	"features": {
		"ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
			"version": "release",
			// "installTinyTex": "true"
		},
		"./uv": {
			"version": "latest"
		},
		"./quarto-computing-dependencies": {
			"rDeps": "renv,rmarkdown,languageserver"
		}
	},
	"postStartCommand": "R -e 'renv::restore()' && uv sync",
	"customizations": {
		"vscode": {
			"extensions": [
				"quarto.quarto",
				"REditorSupport.r",
				"Posit.air-vscode",
				"charliermarsh.ruff",
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode"
			],
			"openFiles": ["README.md", "README.template.md"]
		}
	}
}
